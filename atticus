import pygame
from pygame.locals import *

pygame.init()

WIDTH = 1000
HEIGHT = 1000

screen = pygame.display.set_mode((WIDTH, HEIGHT))

block_size = 40

def draw_grid():
    for line in range(1,25):
        pygame.draw.line(screen, "#ffffff", (0, line * block_size ), (WIDTH, line* block_size ))
        pygame.draw.line(screen, "#ffffff", (line * block_size, 0), (line* block_size, HEIGHT))
    
class World():
    def __init__(self, data):
        self.block_list = []
        dirt_img = pygame.image.load('dirt.png')

        row_count = 0
        for row in data:
            col_count = 0
            for tile in row:
                if tile == 1:
                    img = pygame.transform.scale(dirt_img, (block_size,block_size))
                    img_rect = img.get_rect()
                    img_rect.x = col_count * block_size
                    img_rect.y = row_count * block_size
                    block = (img, img_rect)
                    self.block_list.append(block)
                col_count+=1
            row_count+=1
    def draw(self):
        for block in self.block_list:
            screen.blit(block[0], block[1])



